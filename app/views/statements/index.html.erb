<p id="notice"><%= notice %></p>

<h1>Statements</h1>

<table>
  <thead>
    <tr>
      <th>Performed at</th>
      <th>Cost</th>
      <th>Merchant</th>
      <th>Transaction</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.performed_at %></td>
        <td><%= statement.cost %></td>
        <td><%= statement.merchant %></td>
        <td><%= statement.transaction_id %></td>
        <td><%= statement.category %></td>
        <td><%= link_to 'Show', statement %></td>
        <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
        <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

